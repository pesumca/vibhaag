{
  "name": "vibhaag",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c green,cyan \"cd apps/api && bun run dev\" \"cd apps/web && bun run dev\"",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:mobile": "cd apps/mobile && bun run start",
    "build": "cd apps/web && bun run build",
    "seed": "cd apps/api && bun run seed",
    "lint": "cd apps/api && bun run lint && cd ../web && bun run lint"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
